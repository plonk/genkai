<ol class="breadcrumb">
  <li><a href="/"><%= h @site_settings['SITE_NAME'] %></a></li>
  <li class="active"><%= h @board.title %></li>
</ol>

<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h1>
        <%= @board.settings['BBS_TITLE'] %>
      </h1>
    </div>

    <div class="panel-body">
      <%= @board.local_rules %>
    </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4>スレッド一覧</h4>
  </div>
  <div class="list-group">
    <% @threads.each.with_index do |thread, i| %>
      <a class="list-group-item" href="/test/read.cgi/<%= @board.id + '/' + thread.id %>">
        <%= thread.name %> <span class="badge" style="float: right; vertical-align: middle"><%= thread.number_posts %></span></a>
    <% end %>
  </div>
</div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>スレッド作成</h4>
    </div>
    <div class="panel-body">
      <%= erb :thread_create_form %>
    </div>
  </div>

</div>
