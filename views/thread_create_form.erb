<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">
    <span>×</span>
  </button>
  <h4 class="modal-title">スレッド作成</h4>
</div>
<form action="/test/bbs.cgi" method="POST">
  <div class="modal-body">
    <div class="form-group">
      <label>タイトル</label>
      <input class="form-control" type="text" name="subject">
    </div>
    <div class="form-group">
      <label>名前</label>
      <input class="form-control" type="text" name="FROM">
    </div>
    <div class="form-group">
      <label>E-mail</label>
      <input class="form-control" type="text" name="mail">
    </div>
    <div class="form-group">
      <textarea class="form-control" rows="5" name="MESSAGE" style="font-family: &quot;MS PGothic&quot;; font-size: 16px"></textarea>
    </div>
  </div>
  <input type="hidden" name="bbs" value="<%= h @board.id %>">
  <div class="modal-footer">
    <div class="form-group">
      <input class="btn btn-default" type="submit" name="submit" value="新規スレッド作成">
    </div>
  </div>
</form>
