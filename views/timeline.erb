<ol class="breadcrumb">
  <li><a href="/"><%= h @site_settings['SITE_NAME'] %></a></li>
  <li><a href="/<%= h @board.id %>/"><%= h @board.title %></a></li>
  <li class="active"><%= h @thread.subject %></li>
</ol>


<div class="container">

<h3>
  <a href="/test/read.cgi/<%= @board.id %>/<%= @thread.id %>"><%= h @thread.subject %></a>
  <a class="btn btn-default btn-sm" href="/<%= File.join(@board.id, 'dat', @thread.id + '.dat') %>">.dat</a>
</h3>

<div style="margin: 20px 0px 20px 0px">
<% @posts.each do |post| %>
<%= erb :post_media_object, locals: { post: post } %>
<% end %>
</div>

<div class="media">
  <div class="media-left">
    <div style="width: 64px; height: 64px; background-color: #f0f0f0; text-align: center; line-height: 64px"><span class="glyphicon glyphicon-pencil text-primary" style="font-size: 45px; vertical-align: middle"></span></div>
  </div>

  <div class="media-body">
    <form class="form" action="/test/bbs.cgi" method="POST">
        <div class="form-group">
          <label class="control-label">
            名前
          </label>
          <input class="form-control" name="FROM" type="text" placeholder="<%= h @board.default_name %>">
        </div>
        <div class="form-group">
          <label class="control-label">
            E-mail
          </label>
          <input class="form-control" name="mail" type="text">
        </div>
      <div class="form-group">
        <textarea class="form-control" style="width: 100%" rows=3 name="MESSAGE"></textarea>
      </div>
      <div class="form-group">
        <input class="btn btn-primary" type="submit" name="submit" value="書き込む">
      </div>
      <input type="hidden" name="bbs" value="<%= h @board.id %>">
      <input type="hidden" name="key" value="<%= h @thread.id %>">
    </form>
  </div>
</div>

</div>

</div>
